doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='author' content='Adil Ansari')
  title Welcome
  link(href='/stylesheets/bootstrap.css' rel='stylesheet')
  link(href='/stylesheets/style.css' rel='stylesheet')
nav.navbar.navbar-expand-md.navbar-dark.bg-dark
  if !user
   a.navbar-brand(href='/users/login') NodeAuth
  if user
   a.navbar-brand(href='/') NodeAuth
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarCollapse.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      if user
       li(class=(title == 'Members'?"active":''))
         a.nav-link(href='/') Members 
      if !user
       li(class=(title == 'Register'?"active":''))
         a.nav-link(href='/users/register') Register
       li(class=(title == 'Login'?"active":''))
         a.nav-link(href='/users/login') Login
    ul.nav.navbar-nav.navbar-right
      if user
       li.nav-item
         a.nav-link(href='/users/logout') Logout
     
    form.form-inline.mt-2.mt-md-0
      input.form-control.mr-sm-2(type='text' placeholder='Search' aria-label='Search')
      button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
main.container(role='main')
  .container
    != messages()
    block content

  script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
  script(src="javascripts/bootstrap.js")








